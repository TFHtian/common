<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/themeBackground">

        <include
            android:id="@+id/appbar"
            layout="@layout/common_title_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_drop_down"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/dialog_drop_down"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="@color/color_E6E6E6"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="@color/color_E6E6E6"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_side_draw"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/dialog_side_draw"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E6E6E6"/>

        </LinearLayout>

        <com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingTop="16dp"
                android:paddingEnd="32dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_top"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_bottom"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_arbitrary_position"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:bl_corners_radius="5dp"
                    app:bl_stroke_width="1dp"
                    app:bl_solid_color="@color/white"
                    app:bl_stroke_color="@color/base_theme">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_attach_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_attach_horizontal"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:bl_corners_radius="5dp"
                        app:bl_solid_color="@color/base_theme"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_attach_bubble_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_attach_bubble_horizontal"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:bl_corners_radius="5dp"
                        app:bl_solid_color="@color/base_theme"
                        tools:ignore="RelativeOverlap" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_attach_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_attach_vertical"
                        android:layout_marginTop="100dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:bl_corners_radius="5dp"
                        app:bl_solid_color="@color/base_theme"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_attach_bubble_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_attach_bubble_vertical"
                        android:layout_alignTop="@+id/tv_attach_vertical"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:bl_corners_radius="5dp"
                        app:bl_solid_color="@color/base_theme"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingTop="25dp"
                android:paddingEnd="32dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_full_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_full_screen"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_soft_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_soft_top"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_position"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:bl_corners_radius="25dp"
                    app:bl_solid_color="@color/base_theme"/>

            </LinearLayout>

        </com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout>

    </LinearLayout>

</layout>