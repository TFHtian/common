<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_loading_size"
    android:layout_height="@dimen/dialog_loading_size"
    android:gravity="center"
    android:orientation="vertical"
    app:bl_solid_color="@color/base_theme"
    app:bl_corners_radius="@dimen/dialog_loading_radius">

    <ProgressBar
        android:id="@+id/progress_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_loading_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_loading_margin"
        android:textSize="@dimen/dialog_loading_text_size"
        android:textColor="@color/base_white"/>

</LinearLayout>